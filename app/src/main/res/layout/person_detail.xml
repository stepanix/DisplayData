<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_marginTop="53dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtFirstNameLabel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:text="First Name:"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtFirstNameValue"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:layout_toRightOf="@+id/txtFirstNameLabel"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/txtFirstNameValue"
        android:id="@+id/txtLastNamelabel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:text="Last Name:"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/txtFirstNameValue"
        android:id="@+id/txtLastNameValue"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:layout_toRightOf="@+id/txtLastNamelabel"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/txtLastNameValue"
        android:id="@+id/txtAgelabel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:text="Age:"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/txtLastNameValue"
        android:id="@+id/txtAgeValue"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:layout_toRightOf="@+id/txtLastNamelabel"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/txtAgelabel"
        android:id="@+id/txtColorLabel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:text="Favourite Color:"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/txtAgelabel"
        android:id="@+id/txtColorValue"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dip"
        android:layout_toRightOf="@+id/txtLastNamelabel"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>